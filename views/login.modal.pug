.modal.fade#modal-login(role="dialog")
  .modal-dialog(role="document")
    .modal-content
      .modal-header
        button.close(
          type="button"
          data-dismiss="modal"
          aria-label="Close") #[span(aria-hidden="true") &times;]
        h1(style="display:none") Login
        h2 Welcome!

      .modal-body
        .login-social-container
          p Sign in with:
          .social-buttons
            a.login-social-btn(href="/auth/facebook" role="button") FB
            a.login-social-btn(href="/auth/google" role="button") G
            a.login-social-btn(href="/auth/github" role="button") GH
            a.login-social-btn(href="/auth/twitter" role="button") T
